	   	<table width="100%" cellpadding="8" cellspacing="0" class="tableBasic" style="border:0">
	    <tr>
		  <td width="100" align="right">存储区</td>
		  <td>
		  {foreach $_lang.qiniu_zone as $k=>$v}
