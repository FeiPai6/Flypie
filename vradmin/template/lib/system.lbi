		    <input type="radio" name="qiniu[zone]" {if $_lang.qiniu_config.zone==$k}checked{/if} value="{$k}"> {$v.name}
		   </label>　 
		  {/foreach}
		  </td>
		 </tr>
		 <tr>
		  <td align="right">accessKey</td>
